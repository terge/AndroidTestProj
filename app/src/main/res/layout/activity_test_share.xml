<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:padding="15dp"
    >
    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="开始监听截屏事件"
        android:onClick="onShare"/>

    <ScrollView
        android:layout_above="@id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="content"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_content" android:text="content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="title"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_title" android:text="title"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="adWord"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_adWord" android:text="adWord"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="adUrl"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_adUrl" android:text="http://www.qq.com"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="shareUrl"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_shareUrl" android:text="http://www.tmall.com"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="tail"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_tail" android:text="tail"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="tailUrl"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_tailUrl" android:text="http://www.baidu.com"/>
            </LinearLayout>

            <include layout="@layout/divider"/>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="ucid"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_ucid" android:text="123456789"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="gameId"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_gameId" android:text="21066"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="nickname"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_nickname" android:text="nickname"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="from"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_from" android:text="sdk"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="imgUrl"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_imgUrl" android:text="由截屏时间获得，不可编辑" android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="platform"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_platform" android:text="wechat" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_input_with_label">
                <TextView style="@style/lable_left_to_input" android:text="iconUrl"/>
                <EditText style="@style/input_right_to_lable" android:id="@+id/et_iconUrl" android:text="由截屏时间获得，不可编辑" android:enabled="false"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>